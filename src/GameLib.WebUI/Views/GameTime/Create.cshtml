@model GameTimeCreateModel
@{
var games = ViewBag.Games as List<GameViewModel>;
var users = ViewBag.Users as List<UserDto>;

}
<h1>Create GameTime</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div data="mb-3">
                @Html.DisplayNameFor(model => model.GameId)
                @Html.DropDownListFor(model => model.GameId, new SelectList(games, "Title"), new { @class = "form-control" })
            </div>
            <div data="mb-3">
                @Html.DisplayNameFor(model => model.UserId)
                @Html.DropDownListFor(model => model.UserId, new SelectList(users, "UserName"), new { @class = "form-control" })
            </div>
            <div data="mb-3">
                <button class="btn btn-primary btn-block" style="width: 100% !important" type="submit">Create</button>
            </div>
         </div>  
    </div>
</form>

@section Scripts {
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script>
        $(function () {
            $("#game").select2();
        })
    </script>
}