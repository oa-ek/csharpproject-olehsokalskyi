@model GameTimeEditModel
@{
    var games = ViewBag.Games as List<GameViewModel>;
    var users = ViewBag.Users as List<UserDto>;

}
<h1>Create GameTime</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.GameId)
            @Html.HiddenFor(model => model.UserId)
            @* <input type="hidden" name="GameId" value="@Model.GameId" />
            <input type="hidden" name="UserId" value="@Model.UserId" /> *@
            <div class="mb-3">
                @Html.DisplayNameFor(model => model.TotalTime)
                @Html.TextBoxFor(model => model.TotalTime, "{0:hh\\:mm}", new { @class = "form-control" })
            </div>

            <div data="mb-3">
                <button class="btn btn-primary btn-block" style="width: 100% !important" type="submit">Edit</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script>
        $(function () {
            $("#game").select2();
        })
    </script>
}