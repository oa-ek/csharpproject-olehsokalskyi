@model List<AchievementUserViewModel>
@{
    var firstItem = Model.Count > 0 ? Model[0] : new AchievementUserViewModel();
}

<h1>AchievementUsers</h1>

@if(Model.Count == 0)
{
    <p>No achievementUsers found</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => firstItem.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => firstItem.Achievement.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => firstItem.User.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => firstItem.Date)
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Achievement.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                       @*  <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> *@
                    </td>
                    <td>
                        <form asp-action="Delete" enctype="multipart/form-data">
                            <button class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
