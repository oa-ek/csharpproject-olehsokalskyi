@using GameLib.Repository.Dtos
@model List<AchievementViewModel>
@{
    var firstItem = Model.Count > 0 ? Model[0] : new AchievementViewModel();
}

<h1>Achievements</h1>
@if(Model.Count == 0)
{
    <p>No achievements found</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => firstItem.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => firstItem.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => firstItem.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => firstItem.PlayersGet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => firstItem.GameTitle)
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayersGet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameTitle)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <form asp-action="Delete" enctype="multipart/form-data">
                            <button class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



